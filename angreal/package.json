{
  "name": "angreal",
  "displayName": "angreal",
  "description": "Developer Productivity Enhancement using LLMs",
  "icon": "images/AngrealLogo.png",
  "repository": "https://github.com/DavidDworetzky/Angreal",
  "publisher": "Cuendillar",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "key": "ctrl+shift+a ctrl+shift+s",
        "mac": "cmd+shift+a cmd+shift+s",
        "command": "angreal.suggestion",
        "when": "editorTextFocus"
      },
      {
        "key": "ctrl+shift+a ctrl+shift+r",
        "mac": "cmd+shift+a cmd+shift+r",
        "command": "angreal.replaceSelection",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Angreal",
      "properties": {
        "angreal.OpenAIKey": {
          "type": [
            "string",
            "null"
          ],
          "default": "",
          "description": "OpenAI API Key"
        },
        "angreal.GroqKey": {
          "type": [
            "string",
            "null"
          ],
          "default": "",
          "description": "Groq API Key"
        },
        "angreal.ModelProvider": {
          "type": "string",
          "default": "groq",
          "description": "Default Model Type used for angreal extension. Default is groq - llama."
        }
      }
    },
    "commands": [
      {
        "command": "angreal.suggestion",
        "title": "Suggestion"
      },
      {
        "command": "angreal.replaceSelection",
        "title": "ReplaceSelection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "groq-sdk": "^0.5.0"
  }
}
